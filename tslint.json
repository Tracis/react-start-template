{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "semicolon": [
      true,
      "always"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-console": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-bitwise": false,
    "member-ordering": false,
    "no-string-literal": false,
    "prefer-for-of": false,
    "ban-types": false,
    "no-shadowed-variable": false,
    "object-literal-key-quotes": false,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "member-access": false,
    "no-var-requires": false
  },
  "linterOptions": {
    "exclude": [
      "doc/*",
      "scripts/*",
      "config/*",
      "node_modules/**/"
    ]
  },
  "jsRules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "no-bitwise": false
  }
}